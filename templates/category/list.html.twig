{% extends 'base.html.twig' %}

{% block body %}
    <!-- Page Header Start -->
    <div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container text-center py-5">
            <h1 class="display-3 text-white mb-4 animated slideInDown">Nos produits</h1>
            <nav aria-label="breadcrumb animated slideInDown">
                <!-- If you want to add links -->
                <ol class="breadcrumb justify-content-center mb-0">
                    <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_shop') }}">Nos produits</a></li>
                    <li class="breadcrumb-item active" aria-current="page">{{ category.getName() }}</li>
                </ol>
            </nav>
        </div>
    </div>
    <!-- Page Header End -->

    <main class="container">
        <section class="row">
            <div class="col-12">
                <div class="text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
                    <p class="section-title bg-white text-center text-primary px-3">RAYON</p>
                    <h1 class="mb-5">{{ category.getName() }}</h1>
                </div>
            </div>
            {% if articles is not empty %}
                {% for article in articles %}
                    <div class="col-3 mb-3">
                        <article class="card h-100">
                            {% if article.getImages().count() > 0 %}
                                <img src=
                                "{{ asset('assets/uploads/article/mini/300x300-' ~ article.getImages()[0].getName()) }}"
                                 class="card-img-top" alt="{{ article.getName() }}">
                            {% else %}
                                <img src="{{ asset('assets/images/default-image.png') }}"
                                     class="card-img-top" alt="Image par défaut">
                            {% endif %}
                            <div class="card-body text-center">
                                <h2 class="card-title text-primary">{{ article.getName() }}</h2>
                                <p class="card-text">{{ article.getDescription() }}</p>
                                <p class="card-price"> <strong>Prix :</strong>  {{ article.getPrice() / 100 }} €</p>
                                <p class="card-stock">Actuellement en stock : {{ article.getStock() }}</p>
                                <a href="{{ path('articles_details', {"slug": article.getSlug()}) }}"
                                   class="btn btn-primary">En savoir plus</a>
                            </div>
                        </article>
                    </div>
                {% endfor %}
            {% else %}
                <div class="col-12">
                    <p>Aucun article disponible dans cette catégorie.</p>
                </div>
            {% endif %}
        </section>
        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_PRODUCT_ADMIN') %}
        <div class="col-3">
            <a href="{{ path('admin_articles_add') }}" class="btn btn-primary">Ajouter un article</a>
        </div>
        {% endif %}
    </main>
{% endblock %}
