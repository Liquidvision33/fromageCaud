{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
<main class="container">
    <section class="row">
        <div class="col-12">
            <h1>Nos produits : {{ category.name }}</h1>
        </div>
            {% for article in articles %}
                <div class="col-3 mb-3">
                    <article class="card h-100">
                        <img src="{{ asset('assets/uploads/article/mini/300x300-' ~ article.images[0].name) }}"
                        class="card-img-top" alt="{{ article.name }}">
                        <div class="card-body">
                            <h2 class="card-title">{{ article.name }}</h2>
                            <p class="card-price">Prix : {{ article.price /100 }} â‚¬</p>
                            <p class="card-text">{{ article.description }}</p>
                            <p class="card-stock">Actuellement en stock : {{ article.stock}}</p>
                            <a href="{{ path('articles_details', {"slug": article.slug}) }}" class="btn btn-primary">En savoir plus</a>
                        </div>
                    </article>
                </div>
            {% endfor %}
    </section>
</main>
{% endblock %}