{% extends 'base.html.twig' %}

{% block title %}Modifier le mot de passe{% endblock %}

{% block body %}
        <section class="container d-flex justify-content-center  mt-xl-5">
            <div class="my-5 mx-auto">
                <div class="my-5 mx-5">
                    <h1 class="text-center h3 mb-5 font-weight-normal">Modifier le mot de passe</h1>
                    {{ form_start(resetForm) }}
                    {{ form_row(resetForm.plainPassword) }}
                    <div class="text-center">
                        <button class="btn btn-primary mt-5 mb-3">Modifier le mot de passe</button>
                    </div>
                    {{ form_end(resetForm) }}
                </div>
            </div>
        </section>
{% endblock %}