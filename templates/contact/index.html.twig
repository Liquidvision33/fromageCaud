{% extends 'base.html.twig' %}

{% block stylesheets%}{% endblock %}

{% block title %}Contact{% endblock %}

{% block body %}

    {% for category, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ category }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <h1 class="">Contact</h1>

    <div class="fc-contact-form">
        {{ form_start(form) }}
        <div class="fc-contact-name">
            <div class="fc-contact-firstname">
                {{ form_row(form.Prenom) }}
            </div>
            <div class="fc-contact-lastname">
                {{ form_row(form.Nom) }}
            </div>
        </div>
        <div>
            {{ form_row(form.Email) }}
        </div>

        <div>
            {{ form_row(form.Sujet) }}
        </div>

        <div>
            {{ form_row(form.Contenu) }}
        </div>

        <div class="form-group">
            {{ form_row(form.Envoyer) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

